@model CpaTicker.Areas.admin.Classes.UserProfile

@{
    ViewBag.Title = "Email";
}

<div class="row tspark">
	@Html.Partial("_Sparks")
</div>

<section id="widget-grid">
    
    <div class="row">

        <div class="table-section col-sm-12 col-md-12 col-lg-12">
            <div class="table-content">
                <div class="table-title">Email APIKey</div>

                <!-- NEW WIDGET START -->
                <article>
                    <!-- Widget ID (each widget will need unique ID)-->
                    <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false" data-widget-deletebutton="false" data-widget-custombutton="false">

                        <!-- widget div-->
                        <div>

                            <!-- widget content -->
                            <div class="widget-body no-padding">
                                <div class="smart-form">

                                    <footer>
                                        <nav>
                                            <button class="btn btn-default" type="button" onclick="window.history.back();">Back</button>
                                        </nav>
                                    </footer>

                                    @if (ViewBag.Error == true)
                                    {
                                        <div style="padding: 10px;">
                                            <h4 class="alert alert-warning">
                                                <i class="fa-fw fa fa-warning"></i>
                                                <strong>Warning</strong> The email couldn't be sent to user @Model.UserName
                                            </h4>
                                        </div>
                                    }
                                    else
                                    {
                                        <div style="padding: 10px;">
                                            <h4 class="alert alert-info">
                                                <i class="fa-fw fa fa-check"></i>
                                                <strong>Success</strong> The email has been sent to user @Model.UserName
                                            </h4>
                                        </div>
                                    }
                                </div>

                            </div>
                            <!-- end widget content -->

                        </div>
                        <!-- end widget div -->

                    </div>
                    <!-- end widget -->
                </article>
                <!-- WIDGET END -->
            </div>
        </div>

    </div>

</section>

<script type="text/javascript">

    // PAGE RELATED SCRIPTS
    updateBreadCrumb('Settings/Email');

</script>