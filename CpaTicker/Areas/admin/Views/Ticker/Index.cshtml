                                                        {@:|
                                                            @Html.ActionLink("Elements", "elements", new { id = item.TickerId })
                                                        }

                                                    </nav>
                                                    @if (many)
                                                    {
                                                        @:|
                                                        @Html.ActionLink("Delete", "deleteticker", "helper", new { id = item.TickerId }, new { @class = "rlink" })
                                                    }


                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>
