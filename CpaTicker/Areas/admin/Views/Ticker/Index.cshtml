                                            <th>@Html.DisplayNameFor(model => model.Speed)</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {

                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.TickerId)
                                                </td>
                                                <td>
                                                    @( item.Speed / 100.0)
                                                    @* @Html.DisplayFor(modelItem => item.Speed)*@
                                                </td>
                                                <td style=" text-align: center;">
                                                    <nav style="display:inline;">
