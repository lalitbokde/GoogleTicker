@model CpaTicker.Areas.admin.Classes.Domain

@{
    ViewBag.Title = "Add new Domain";
    Layout = null;
    ViewBag.hash = Url.Action("Index");
}

<div class="row tspark">
    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
        <h1 class="page-title txt-color-blueDark">
            <i class="fa fa-wrench fa-fw "></i>
            @Html.ActionLink("Settings", "index")
            <span>
                >
                Create Domain
            </span>
        </h1>
    </div>
	@Html.Partial("_Sparks")
</div>

<section id="widget-grid" class="">

	<!-- START ROW -->

	<div class="row">

		<!-- NEW COL START -->
		<article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			
			<!-- Widget ID (each widget will need unique ID)-->
			<div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-deletebutton="false">
				
				<header>
					<span class="widget-icon"> <i class="fa fa-plus"></i> </span>
					<h2>Add Domain</h2>				
				</header>

				<!-- widget div-->
				<div>
					
					<!-- widget edit box -->
					<div class="jarviswidget-editbox">
						<!-- This area used as dropdown edit box -->
						
					</div>
					<!-- end widget edit box -->
					
					<!-- widget content -->
					<div class="widget-body no-padding">

                        @using (Html.BeginForm("addcustomerdomain", "settings", FormMethod.Post, new { @id = "adddomain", @class = "smart-form" }))
                        { 
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                             <footer>
                                 <nav>
                            <button class="btn btn-primary" type="submit" id="submit_button"> <i class="fa fa-check"></i> Create Domain </button>
                          
                                 @Html.ActionLink("Back", "index", null, new { @class = "btn btn-default", @id = "back_button" })
                                     </nav>
                            </footer>
                            
                            <fieldset>
                                <div class="row">
									<section class="col col-4">
                                        @Html.LabelFor(model => model.DomainName, new { @class="label"})
										<label class="input"> <i class="icon-append fa fa-user"></i>
                                            @Html.EditorFor(model => model.DomainName)
										</label>
                                        @Html.ValidationMessageFor(model => model.DomainName)
									</section>
                                </div>
                            </fieldset>
                        
                        }

					</div>
					<!-- end widget content -->
					
				</div>
				<!-- end widget div -->
				
			</div>
			<!-- end widget -->

		</article>
		<!-- END COL -->

	</div>

	<!-- END ROW -->

</section>

<script type="text/javascript">
        // DO NOT REMOVE : GLOBAL FUNCTIONS!
        pageSetUp();
        
     // PAGE RELATED SCRIPTS
        updateBreadCrumb('Settings/Create Domain');

        container = $('#content');
        $.validator.unobtrusive.parse(container);

        

        $('#submit_button').click(function (e) {
            e.preventDefault();
            var f = this.form;
            container = $('#content');
            //$.validator.unobtrusive.parse($(f)); // this may be placed better! OJO
            if ($(f).valid()) {
                pajaxSubmit(f, container, '@ViewBag.hash');
            }
            return false; // keeps the page from not refreshing 
        });

</script>