@model CpaTicker.Areas.admin.Controllers.ChangePwdModel

@{
    ViewBag.Title = "Change Password";
    Layout = null;
    ViewBag.hash = Url.Action("Index");
}

<div class="row tspark">
    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
        <h1 class="page-title txt-color-blueDark">
            <i class="fa fa-wrench fa-fw "></i>
            @Html.ActionLink("Settings", "index")
            <span>
                >
                Change Password
            </span>
        </h1>
    </div>
	@Html.Partial("_Sparks")
</div>

<section id="widget-grid" class="">


	<!-- START ROW -->

	<div class="row">

		<!-- NEW COL START -->
		<article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			
			<!-- Widget ID (each widget will need unique ID)-->
			<div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-deletebutton="false">
				
				<header>
					<span class="widget-icon"> <i class="fa fa-edit"></i> </span>
					<h2>Change Password</h2>				
				</header>

				<!-- widget div-->
				<div>
					
					<!-- widget content -->
					<div class="widget-body no-padding">

                        @using (Html.BeginForm("ChangePwd", "settings", FormMethod.Post, new { @id = "changepwd", @class = "smart-form" }))
                        { 
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            <footer>
                                <nav>
                                    <button class="btn btn-primary" type="submit" id="submit_button"><i class="fa fa-save"></i>Change Password</button>
                                    @*<button class="btn btn-default" id="back_button" onclick="window.history.back();" type="button"> Back </button>*@
                                    @Html.ActionLink("Back", "index", null, new { @class = "btn btn-default", @id = "back_button" })
                                </nav>
                            </footer>
                            
                            <fieldset>
                                <div class="row">
									<section class="col col-4">
                                        @Html.LabelFor(model => model.CurrentPassword, new { @class="label"})
										<label class="input"> <i class="icon-append fa fa-lock"></i>
                                            @Html.EditorFor(model => model.CurrentPassword)
										</label>
                                        @Html.ValidationMessageFor(model => model.CurrentPassword)
									</section>

                                   <section class="col col-4">
                                        @Html.LabelFor(model => model.Password, new { @class="label"})
										<label class="input"> <i class="icon-append fa fa-lock"></i>
                                            @Html.EditorFor(model => model.Password)
										</label>
                                        @Html.ValidationMessageFor(model => model.Password)
									</section>

                                     <section class="col col-4">
                                        @Html.LabelFor(model => model.ConfirmPassword, new { @class="label"})
										<label class="input"> <i class="icon-append fa fa-lock"></i>
                                            @Html.EditorFor(model => model.ConfirmPassword)
										</label>
                                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
									</section>
								</div>

                            </fieldset>
                        
                        }

					</div>
					<!-- end widget content -->
					
				</div>
				<!-- end widget div -->
				
			</div>
			<!-- end widget -->

		</article>
		<!-- END COL -->

	</div>

	<!-- END ROW -->

</section>

<script type="text/javascript">
        // DO NOT REMOVE : GLOBAL FUNCTIONS!
    pageSetUp();

    //$.validator.unobtrusive.parse($(f));
        
     // PAGE RELATED SCRIPTS
        updateBreadCrumb('Settings/Change Password');

        $('#submit_button').click(function (e) {
            e.preventDefault();
            var f = this.form;
            container = $('#content');
            $.validator.unobtrusive.parse($(f)); // this may be placed better! OJO
            if ($(f).valid()) {
                pajaxSubmit(f, container, '@ViewBag.hash');
            }
            return false; // keeps the page from not refreshing 
        });
</script>