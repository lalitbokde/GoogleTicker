        });

        $('#run').click(function (e) {
            e.preventDefault();
            window.location.hash = getURL(reporturl);
        });

        $('#export').click(function (e) {
            e.preventDefault();
            window.location = getURL(reporturl) + '&state=1';
        });

        $('.togglerefresh').change(function () {
            refreshTable(this.name);
        });

