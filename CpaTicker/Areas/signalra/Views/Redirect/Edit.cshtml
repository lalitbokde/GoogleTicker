@model CpaTicker.Areas.admin.Classes.RedirectUrl
@{
    ViewBag.Title = "Edit";
    ViewBag.hash = Url.Action("index", new { id = Model.URLId });
}

<div class="row tspark">
    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
        <h1 class="page-title txt-color-blueDark">

            <i class="fa fa-globe fa-fw "></i>
            @Html.ActionLink("Rediret", "index", new { id = Model.URLId })
            <span>
                >
                Edit
            </span>

        </h1>
    </div>

	@Html.Partial("_Sparks")
</div>

<section id="widget-grid" class="">

	<!-- START ROW -->

	<div class="row">

		<!-- NEW COL START -->
		<article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			
			<!-- Widget ID (each widget will need unique ID)-->
			<div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-deletebutton="false">
				
				<header>
					<span class="widget-icon"> <i class="fa fa-edit"></i> </span>
					<h2>Edit Redirect</h2>				
					
				</header>

				<!-- widget div-->
				<div>
					
					<!-- widget edit box -->
					<div class="jarviswidget-editbox">
						<!-- This area used as dropdown edit box -->
						
					</div>
					<!-- end widget edit box -->
					
					<!-- widget content -->
					<div class="widget-body no-padding">

                        @using (Html.BeginForm("edit", "redirect", FormMethod.Post, new { @id = "editredirect", @class = "smart-form" }))
                        { 
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                            @Html.HiddenFor(model => model.Id)
                            @Html.HiddenFor(model => model.URLId)

                             <footer>
                                 <nav>
                                    <button class="btn btn-primary" type="submit" id="submit_button"> <i class="fa fa-save"></i> Save Redirect </button>
                                    @Html.ActionLink("Back", "index", new { id = Model.URLId }, new { @class = "btn btn-default", @id = "back_button" })
                                </nav>
                            </footer>
                            
                            <div class="fieldset">

                                <section>
                                    @Html.LabelFor(model => model.RedirectURL, new { @class="label"})
									<label class="input"> <i class="icon-append fa fa-globe"></i>
                                        @Html.EditorFor(model => model.RedirectURL)
									</label>
                                    @Html.ValidationMessageFor(model => model.RedirectURL)
								</section>

                               <section>
                                    <label class="label">Target Countries</label>
                                    <label class="select">
                                        <select multiple class="select2" name="countries">
                                            @foreach (var item in ViewBag.Countries)
                                            {
                                                <option value="@item.Value" @(item.Selected ? "selected" : "")>@item.Text</option>
                                            }
                                        </select>
                                        @*@Html.DropDownList("countries", (IEnumerable<SelectListItem>)ViewBag.Countries, new { @multiple = "multiple", @class = "select2" })*@
                                    </label>
								</section>
                                
                            </div>
                        
                        }

					</div>
					<!-- end widget content -->
					
				</div>
				<!-- end widget div -->
				
			</div>
			<!-- end widget -->
			
			

		</article>
		<!-- END COL -->

	</div>

	<!-- END ROW -->

</section>

<script type="text/javascript">
        // DO NOT REMOVE : GLOBAL FUNCTIONS!
        pageSetUp();
        
        // PAGE RELATED SCRIPTS
        updateBreadCrumb('Redirect/Edit');

        $('#submit_button').click(function (e) {
            e.preventDefault();
            var f = this.form;
            container = $('#content');
            $.validator.unobtrusive.parse($(f)); // this may be placed better! OJO
            if ($(f).valid()) {
                pajaxSubmit(f, container, '@ViewBag.hash');
            }
            return false; // keeps the page from not refreshing 
        });

</script>
