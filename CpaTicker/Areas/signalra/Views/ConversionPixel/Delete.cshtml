@model IEnumerable<CpaTicker.Areas.admin.Classes.ConversionPixelCampaign>

@{
    ViewBag.Title = "Delete";
}

<div class="row tspark">
    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
        <h1 class="page-title txt-color-blueDark">
            <i class="fa fa-th fa-fw "></i>
            @Html.ActionLink("Conversion Pixels", "index")
            <span>
                >
                Delete
            </span>
        </h1>
    </div>
	@Html.Partial("_Sparks")
</div>

<section id="widget-grid" class="">


	<!-- START ROW -->

	<div class="row">

		<!-- NEW COL START -->
		<article class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
			
			<!-- Widget ID (each widget will need unique ID)-->
			<div class="jarviswidget" id="wid-id-1" data-widget-editbutton="false" data-widget-custombutton="false" data-widget-deletebutton="false" data-widget-togglebutton="false">
				
				<header>
					<span class="widget-icon"> <i class="fa fa-edit"></i> </span>
					<h2>Delete Conversion Pixel</h2>				
					
				</header>

				<!-- widget div-->
				<div>
					
					<!-- widget content -->
					<div class="widget-body no-padding">

                        @using (Html.BeginForm("delete", "conversionpixel", FormMethod.Post, new { @id = "deletepixel", @class = "smart-form" }))
                        { 
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                           
                            
                            <div class="fieldset">
                                
                                    
                                <h4>This pixel is associated with Campaigns. Are you sure you want to remove it?</h4>
                                <br />
                                <div class="row clist">
                                    <nav>
                                        @foreach (var item in Model)
                                        {
                                            <div class="col col-3">
                                                @Html.ActionLink(string.Format("{0} - {1}", item.Campaign.CampaignId, item.Campaign.CampaignName), "details", "campaign", new { id = item.Campaign.CampaignId }, null)
                                            </div>
                                    }
                                    </nav>
                                </div>
                               

                            </div>
                            
                            <footer>
                                <nav>
                                    <button class="btn btn-warning" type="submit" id="submit_button"><i class="fa fa-check"></i> Delete Pixel </button>
                                    @Html.ActionLink("Cancel", "index", null, new { @class = "btn btn-default", @id = "back_button" })
                                </nav>
                            </footer>
                        }

					</div>
					<!-- end widget content -->
					
				</div>
				<!-- end widget div -->
				
			</div>
			<!-- end widget -->
			
			

		</article>
		<!-- END COL -->

	</div>

	<!-- END ROW -->

</section>

<script type="text/javascript">
    // DO NOT REMOVE : GLOBAL FUNCTIONS!
    pageSetUp();
        
    // PAGE RELATED SCRIPTS
    updateBreadCrumb('ConversionPixel/Delete');

    $('#submit_button').click(function (e) {
        e.preventDefault();
        var f = this.form;
        container = $('#content');
        $.validator.unobtrusive.parse($(f)); // this may be placed better! OJO
        if ($(f).valid()) {
            pajaxSubmit(f, container, '@ViewBag.hash');
        }
        return false; // keeps the page from not refreshing 
    });
</script>


