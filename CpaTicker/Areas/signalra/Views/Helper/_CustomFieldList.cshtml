<table class="table table-hover simple-dt" id="table_customfields">
    <thead>
        <tr>
            <th>Field Name</th>
            <th />
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.FieldName
                </td>
                <td>
                    <nav style="display: inline;">
                        @Html.ActionLink("Edit", "editcustomfield", "settings", new { id = item.CustomFieldId }, new { @class = "btn btn-primary btn-xs" })
                    </nav> | 
                    @Html.ActionLink("Delete", "RemoveCustomField", "helper", new { id = item.CustomFieldId }, new { @class = "btn btn-danger btn-xs rlink" })
                </td>
            </tr>
        }
    </tbody>
</table>