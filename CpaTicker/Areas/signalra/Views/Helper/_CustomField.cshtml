@model IEnumerable<CpaTicker.Areas.admin.Classes.CustomField>

@if (Model.Count() > 0)
{
    <div></div>
    <fieldset>
        <legend>Additional Fields</legend>
        <div class="row">

            @foreach (var item in Model)
            {
                <section class="col col-4">
                    <label class="label">@item.FieldName</label>
                    <label class="input">
                        <i class="icon-append fa fa-user"></i>
                        <input type="text" name="cfield-@item.CustomFieldId" value="" />
                    </label>
                </section>
            }
        
        </div>
    </fieldset>
}
