@model CpaTicker.Models.LoginModel
@{
    Layout = null;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>ClickTicker&trade;</title>
    <link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="/css/media.css">
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <link rel="stylesheet" type="text/css" href="/css/common.css">
    <style>
        .field-validation-error {
            font-family: "ProximaNovaRegular";
            font-size: 14px;
            color: red;
        }

        .validation-summary-errors ul {
            list-style: none;
            padding: 5px 0;
            color: red;
            font-weight: bold;
            font-family: "ProximaNovaRegular";
            font-size: 14px;
        }

        .submitlogin {
            margin: 10px auto;
            /*height: 69px;
            width: 276px;*/
            cursor: pointer;
            outline: none;
            border: none;
            display: block;
        }

        .checkbox {
            font-family: "ProximaNovaRegular";
            font-size: 14px;
        }

        .submit_btn {
            background: #0098D0 none repeat scroll 0 0;
            border: medium none;
            border-radius: 30px;
            color: #fff;
            font-family: "ProximaNovaSemibold";
            padding: 10px 22px;
            text-transform: uppercase;
        }

        #affiliate-promo {
            text-align: center;
        }
    </style>
    <script src="/js/jquery-1.11.0.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <link rel="shortcut icon" type="image/x-icon" href="favicon.ico">

</head>

<body>
    @Html.Partial("_GoogleAnalytics")
    <div class="abt_top_sec">
        <div class="top_in">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12 hidden-xs">
                        <ul class="topslsec">
                            <!--<li><a href="#"><img src="/images/sl1.png" width="20" height="20" alt=""></a></li>
                            <li><a href="#"><img src="/images/sl2.png" width="20" height="20" alt=""></a></li>
                            <li><a href="#"><img src="/images/sl3.png" width="20" height="20" alt=""></a></li>
                            <li><a href="#"><img src="/images/sl4.png" width="20" height="20" alt=""></a></li>
                            <li><a href="#"><img src="/images/sl5.png" width="20" height="20" alt=""></a></li>-->
                        </ul>
                    </div>
                </div>
            </div>
            <div class="navbar navbar-default" role="navigation">
                <div class="container">
                    <div class="row">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse"> <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </button>
                            <a class="navbar-brand logo" href="@Url.Action("index", "home")"><img src="/images/logo.png" alt="Logo" class="img-responsive" /></a>
                        </div>
                        <div class="collapse navbar-collapse">
                            <ul class="nav navbar-nav">
                                <li> <a href="@Url.Action("index", "home")">HOME</a> </li>
                                <li> <a href="@Url.Action("features", "home")">features</a> </li>
                                <li> <a href="@Url.Action("contact", "home")">CONTACT</a> </li>
                                <li> <a href="@Url.Action("pricing", "home")">PRICING</a> </li>
                                <li> <a href="@Url.Action("RequestDemo", "home")">Request Demo</a> </li>
                                <li> <a href="@Url.Action("pricing", "home")" class="sign_in">FREE SIGN UP</a> </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container banner">
            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <p class="abt_bnrtxt1">LOGIN</p>
                    <p class="abt_bnrtxt2">@*LOREM IPSUM DOLOR*@</p>
                </div>
            </div>
        </div>
    </div>

    <div class="abtsec1">
        <div class="container formsec">
            <div @if (ViewBag.IsDomainExist) { @: class="col-md-6"
                                                                    }else { @: class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3 col-sm-offset-3"
                                                                    }>
            <form method="post" action="@Url.Action("login", new { ReturnUrl = ViewBag.ReturnUrl })">

            @* @Html.AntiForgeryToken()*@

            <div class="row">

            @Html.ValidationSummary(true)

            </div>

            <div class="row">

            <div class="form-group">
            @Html.TextBoxFor(model => model.UserName, new { @class = "form-control inputshort", placeholder = "UserName" })
            @*<span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>*@
            @Html.ValidationMessageFor(model => model.UserName)
            </div>

            </div>

            <div class="row">

            <div class="form-group">
            @Html.PasswordFor(model => model.Password, new { @class = "form-control  inputshort", placeholder = "Password" })
            @* <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>*@
            @Html.ValidationMessageFor(model => model.Password)
            </div>


            </div>

            <div class="row">

            <div class="form-group">
            <div class="checkbox">
            <label>
            @Html.CheckBoxFor(model => model.RememberMe, new { @class = "" })
            Remember me
            </label>
            </div>
            </div>

            </div>

            <div class="row">

            <div class="form-group">
            <input type="image" class="submitlogin" src="~/Images/login3.png" alt="login" id="loginbtn" />
            </div>

            </div>






            </form>
            </div>
            @if (ViewBag.IsDomainExist)
            {
                <div class="col-md-6 ">
                    <div class="col-md-12 col-md-offset-3" id="affiliate-promo">
                        <h3> Don't have an account yet? </h3>
                        <input type="submit" class="submit_btn" id="Affiliatesignupbtn" value="Affiliate Sign Up">

                    </div>
                </div>
            }

        </div>
    </div>


    <div class="btm_sec">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-sm-4">
                    <div class="btm_box">
                        <div class="btm_hdg">about us</div>
                        <div class="btm_cont"> ClickTicker™ is a cutting-edge solution built by marketers, for marketers. Our management team brings a wealth of experience to help you maximize your marketing initiatives.  </div>
                        <div class="social_icon"> <a href="#"><img src="/images/sl1.png" alt=""></a> <a href="#"><img src="/images/sl2.png" alt=""></a> <a href="#"><img src="/images/sl3.png" alt=""></a> <a href="#"><img src="/images/sl4.png" alt=""></a> <a href="#"><img src="/images/sl5.png" alt=""></a> </div>
                    </div>
                </div>
                <div class="col-md-4 col-sm-4">
                    <div class="btm_box">
                        <div class="btm_hdg">get in touch</div>
                        <div class="btm_cont">
                            <ul class="contactdetail">
                                <li class="mail">sales@clickticker.com</li>
                                <li class="support">support@clickticker.com</li>
                                <li class="phone"><span style="color:#fff;">888-683-4872</span></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-sm-4">
                    <div class="btm_box">
                        <div class="newsletter">newsletter</div>
                        <div class="btm_cont">
                            Recieve news & updates about
                            ClickTicker™.<br>
                            <div class="news_letter">
                                <form>
                                    <input type="text" value="" id="email" name="email" class="txtfld" placeholder="Your email">
                                    <input type="submit"
                                           class="submit" value="SUBSCRIBE">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer>© @DateTime.UtcNow.Year ClickTicker™ US Patent US 8,244,584 B1</footer>
    <script>
        $('#Affiliatesignupbtn').click(function () {
            window.location.href = "../Account/Affiliate";
        });
        $('.carousel').carousel({
            interval: 2000 //TIME IN MILLI SECONDS
        })
    </script>
    @Scripts.Render("~/bundles/jqueryval")
    <a title="Web Analytics" href="http://clicky.com/100857864"><img alt="Web Analytics" src="//static.getclicky.com/media/links/badge.gif" border="0" /></a>
    <script src="//static.getclicky.com/js" type="text/javascript"></script>
    <script type="text/javascript">try { clicky.init(100857864); } catch (e) { }</script>
    <noscript><p><img alt="Clicky" width="1" height="1" src="//in.getclicky.com/100857864ns.gif" /></p></noscript>
</body>
</html>
